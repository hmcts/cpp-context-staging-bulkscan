<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="5" author="Staging-Bulkscan"
               logicalFilePath="005-drop-column-documentSubType-and-rename-documentType.xml">
        <dropColumn tableName="scan_document" columnName="document_subtype"/>
        <dropColumn tableName="scan_document" columnName="document_type"/>
        <addColumn tableName="scan_document">
            <column name="document_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>