<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="3" author="Staging-Bulkscan"
               logicalFilePath="003-drop-column-actioned-and-rename-actioned_date.xml">
        <dropColumn tableName="scan_document" columnName="actioned"/>
        <renameColumn tableName="scan_document" oldColumnName="actioned_date"
                      newColumnName="status_updated_date"/>
        <addColumn tableName="scan_document">
            <column name="status" type="VARCHAR(25)"/>
        </addColumn>
        <addColumn tableName="scan_document">
            <column name="file_store_id" type="UUID"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>